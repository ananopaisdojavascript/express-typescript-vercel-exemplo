{
  "compilerOptions": {
    "target": "ES2017", // Versão do JS para qual o arquivo .ts será compilado
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs", // Usar os módulos do NodeJS
    "outDir": "./build", // Pasta de saída onde ficarão os arquivos convertidos para .js
    "esModuleInterop": true,
    "moduleResolution": "node", // Usar os módulos do NodeJS
    "strict": true // Declaração dos tipos dos dados
  },
  "include": ["./api/*.ts"]
}
